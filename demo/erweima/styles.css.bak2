/* 引入新的色彩系统 */
@import url("colors.css");

/* 旧变量保留以兼容现有代码 */
:root {
    --primary-color: var(--primary);
    --text-color: var(--text-primary);
    --border-color: var(--border);
    --background-color: var(--background);
    --panel-background: var(--surface);
    --hover-color: var(--primary-dark);
    --shadow-color: rgba(0, 0, 0, 0.1);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    line-height: 1.6;
    color: #333;
    background-color: #f5f5f7;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

header {
    text-align: center;
    margin-bottom: 3rem;
}

header h1 {
    font-size: 2.5rem;
    color: #1d1d1f;
    margin-bottom: 0.5rem;
}

.subtitle {
    color: #86868b;
    font-size: 1.1rem;
}

main {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.qr-type-selector {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.type-btn {
    padding: 0.8rem 1.5rem;
    border: none;
    border-radius: 10px;
    background: #f5f5f7;
    color: #1d1d1f;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.type-btn.active {
    background: #0071e3;
    color: white;
}

.input-section {
    margin-bottom: 2rem;
}

.input-section.hidden {
    display: none;
}

.input-group {
    margin-bottom: 1.5rem;
}

.input-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: #1d1d1f;
    font-weight: 500;
}

.input-group input[type="text"],
.input-group input[type="password"],
.input-group input[type="url"],
.input-group textarea,
.input-group select {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #d2d2d7;
    border-radius: 10px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.input-group textarea {
    min-height: 100px;
    resize: vertical;
}

.input-group input:focus,
.input-group textarea:focus,
.input-group select:focus {
    outline: none;
    border-color: #0071e3;
}

.input-group:has(input[type="password"]) {
    position: relative;
}

.show-password-btn {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
}

.input-group.checkbox {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.input-group.checkbox label {
    margin-bottom: 0;
}

.style-section {
    background: #f5f5f7;
    padding: 1.5rem;
    border-radius: 15px;
    margin-bottom: 2rem;
}

.style-section h3 {
    margin-bottom: 1.5rem;
    color: #1d1d1f;
}

.style-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
}

input[type="range"] {
    width: 100%;
    height: 6px;
    background: #d2d2d7;
    border-radius: 3px;
    outline: none;
    -webkit-appearance: none;
}

input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 18px;
    height: 18px;
    background: #0071e3;
    border-radius: 50%;
    cursor: pointer;
}

input[type="color"] {
    -webkit-appearance: none;
    width: 50px;
    height: 50px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
}

input[type="color"]::-webkit-color-swatch-wrapper {
    padding: 0;
}

input[type="color"]::-webkit-color-swatch {
    border: none;
    border-radius: 10px;
}

.logo-upload {
    margin-top: 1.5rem;
    text-align: center;
}

.logo-upload input[type="file"] {
    display: none;
}

.logo-upload label {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background: #0071e3;
    color: white;
    border-radius: 10px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.remove-logo-btn {
    margin-left: 1rem;
    padding: 0.8rem 1.5rem;
    background: #ff3b30;
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.remove-logo-btn.hidden {
    display: none;
}

.preview-section {
    margin-top: 2rem;
    text-align: center;
}

#qr-preview {
    width: 300px;
    height: 300px;
    margin: 0 auto 1rem;
    padding: 1rem;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

#qr-preview svg {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
}

.action-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
}

.primary-btn {
    padding: 0.8rem 1.5rem;
    background: #0071e3;
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.primary-btn:hover {
    background: #0077ed;
}

footer {
    text-align: center;
    margin-top: 2rem;
    color: #86868b;
}

@media (max-width: 768px) {
    .container {
        padding: 1rem;
    }

    header h1 {
        font-size: 2rem;
    }

    .qr-type-selector {
        flex-direction: column;
    }

    .style-grid {
        grid-template-columns: 1fr;
    }

    .action-buttons {
        flex-direction: column;
    }

    .primary-btn {
        width: 100%;
    }
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.input-section:not(.hidden) {
    animation: fadeIn 0.3s ease-out;
} 